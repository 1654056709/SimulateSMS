<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/list_view_item_bg"
                android:padding="8dp"
    >

    <!--头像-->

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>


    <!--日期-->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="年月日"
        android:textSize="16sp"/>

    <!--电话号码-->
    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@id/tv_date"
        android:layout_toRightOf="@id/iv_avatar"
        android:singleLine="true"
        android:text="188-9573-6197"
        android:textSize="16sp"/>


    <!--最新的短信信息-->
    <TextView
        android:id="@+id/tv_new_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone_number"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/iv_avatar"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="jfalkjflajflajfldfasfdafafddfdfdfdfdfdfdfajflkajfajflajfaljflajklff"
        android:textSize="20sp"
        android:textStyle="bold"/>


</RelativeLayout>
